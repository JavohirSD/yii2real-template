Options +FollowSymLinks
IndexIgnore */*
RewriteEngine on

# Ограничить доступ к странице admin login
#RewriteCond %{REQUEST_URI} ^/(backend|backend/web)
#RewriteRule ^ - [R=404,L]

# Если запрос начинается с /api, то заменяем на /api/web/
RewriteCond %{REQUEST_URI} ^/api
RewriteRule ^api\/?(.*) /api/web/$1

# Если запрос начинается с /driver, то заменяем на /backend/web/
RewriteCond %{REQUEST_URI} ^/driver
RewriteRule ^driver\/?(.*) /backend/web/$1

# Добавляем другой запрос /frontend/web/$1
RewriteCond %{REQUEST_URI} !^/(frontend/web|driver|api/web|api)
RewriteRule (.*) /frontend/web/$1

